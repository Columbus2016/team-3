<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :anonymous %><br />
    <%= f.radio_button :anonymous, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :date_of_birth %><br />
    <%= f.date_field :date_of_birth, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :cancer_type %><br />
    <%= f.text_field :cancer_type, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.text_field :status, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.text_field :status, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :stage %><br />
    <%= f.number_field :stage, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :lat %><br />
    <%= f.text_field :lat, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :long %><br />
    <%= f.text_field :long, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>

<style>
body{
    background-color: #525252;
}
.centered-form{
	margin-top: 60px;
}

.centered-form .panel{
	background: rgba(255, 255, 255, 0.8);
	box-shadow: rgba(0, 0, 0, 0.3) 20px 20px 20px;
}
</style>
<div class="container">
        <div class="row centered-form">
        <div class="col-xs-12 col-sm-10 col-md-10 col-sm-offset-2 col-md-offset-1">
        	<div class="panel panel-default">
        		<div class="panel-heading">
			    		<h3 class="panel-title">Edit Your Profile</h3>
			 			</div>
			 			<div class="panel-body">
			    		<form role="form">
			    			<div class="row">
			    				<div class="col-xs-12 col-sm-12 col-md-12">
			    					<div class="form-group">
			                <input type="text" name="first_name" id="first_name" class="form-control input-sm" placeholder="First Name">
			    					</div>
			    				</div>
			    			</div>

			    			<div class="form-group">
			    				<input type="email" name="email" id="email" class="form-control input-sm" placeholder="Email Address">
			    			</div>

			    			<div class="row">
			    				<div class="col-xs-6 col-sm-6 col-md-6">
			    					<div class="form-group">
                      <!-- <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br /> -->
                      <%= f.password_field :password, autocomplete: "off", type:"password", name:"password", id:"password", class:"form-control input-sm", placeholder:"New Password" %>
                      <% if @minimum_password_length %>
                        <br />
                        <em><%= @minimum_password_length %> characters minimum</em>
                      <% end %>
                    	<!-- <input type="password" name="password" id="password" class="form-control input-sm" placeholder="Password"> -->
			    					</div>
			    				</div>
			    				<div class="col-xs-6 col-sm-6 col-md-6">
			    					<div class="form-group">
                      <!-- <%= f.label :password_confirmation %><br /> -->
                      <%= f.password_field :password_confirmation, autocomplete: "off", type: "password", name: "password_confirmation", id: "password_confirmation", class: "form-control input-sm", placeholder: "Confirm Password" %>

                  		<!-- <input type="password" name="password_confirmation" id="password_confirmation" class="form-control input-sm" placeholder="Confirm Password"> -->
			    					</div>
			    				</div>
			    			</div>

			    			<input type="submit" value="Register" class="btn btn-info btn-block">

			    		</form>
			    	</div>
	    		</div>
    		</div>
    	</div>
    </div>
    <% end %>
